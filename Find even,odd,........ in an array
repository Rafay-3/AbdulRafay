let array = [1, 3, -4, 7, 8, -9, 11, 12, -14, 13, 16, 15, 17, -18, 20];

// 1) Find even numbers in an array
let evenNumbers = array.filter(num => num % 2 === 0);
console.log("Even numbers:", evenNumbers);

// 2) Find odd numbers in an array
let oddNumbers = array.filter(num => num % 2 !== 0);
console.log("Odd numbers:", oddNumbers);

// 3) Find sum of array elements
let sum = array.reduce((total, num) => total + num, 0);
console.log("Sum of array elements:", sum);

// 4) Find maximum number in an array
let maxNumber = Math.max(...array);
console.log("Maximum number:", maxNumber);

// 5) Filter positive numbers and their sum
let positiveNumbers = array.filter(num => num > 0);
let positiveSum = positiveNumbers.reduce((total, num) => total + num, 0);
console.log("Positive numbers:", positiveNumbers);
console.log("Sum of positive numbers:", positiveSum);

// 5) Filter positive numbers and their sum
let negativeNumbers = array.filter(num => num < 0);
let negativeSum = negativeNumbers.reduce((total, num) => total + num, 0);
console.log("Negative numbers:", negativeNumbers);
console.log("Sum of negative numbers:", negativeSum);
